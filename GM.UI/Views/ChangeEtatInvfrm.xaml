<Window x:Class="GM.UI.Views.ChangeEtatInvfrm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChangeEtatInvfrm" Height="150" Width="400"
        WindowStyle="ToolWindow">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" Text="Etat:"/>
        <ComboBox Name="ComboBox" Grid.Column="1" Grid.Row="0">
            <ComboBoxItem>Etat normal</ComboBoxItem>
            <ComboBoxItem>Réforme</ComboBoxItem>
        </ComboBox>
        <Separator Grid.Row="1" Grid.Column="1"></Separator>
        <Button Content="Enregistrer" Height="30" Name="SaveBtn" Click="SaveBtn_OnClick" Grid.Row="2" Grid.Column="1" Width="100" HorizontalAlignment="Right"/>
    </Grid>
</Window>
